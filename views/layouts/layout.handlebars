			{{/each}}
		{{/if}}
		{{{body}}}
		</div>
		
		<div class="col_3">
		{{>login}}
		</div>
		
		<hr />
		<!-- NEW BLOCK BELOW... -->
		{{#if isHome}}
			{{>classes}}
		{{/if}}
	</div>
</div><!-- END GRID -->

